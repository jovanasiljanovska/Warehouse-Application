@model Warehouse.Domain.Domain.ShoppingCart

@{
    ViewData["Title"] = "My Cart";
    var items = Model.Items?.ToList() ?? new List<Warehouse.Domain.Domain.ProductInShoppingCart>();
    var grandTotal = items.Sum(i => (i.Product?.UnitPrice ?? 0) * i.Quantity);
}

<div class="container py-5">
    <h2 class="mb-4 fw-bold"><i class="bi bi-cart3"></i> Shopping Cart</h2>

    @if (!items.Any())
    {
        <div class="text-center py-5 shadow-sm bg-light rounded-3">
            <div class="display-1 text-muted mb-3">🛒</div>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Looks like you haven't added any warehouse items yet.</p>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-primary btn-lg rounded-pill mt-3">Start ordering</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var item in items)
                {
                    var price = item.Product?.UnitPrice ?? 0;
                    var total = price * item.Quantity;

                    <div class="card shadow-sm border-0 mb-3 cart-item-card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2 col-4">
                                    <img src="@item.Product?.ImageURL" class="img-fluid rounded" alt="@item.Product?.Name"
                                         onerror="this.src='/images/no-image.png'">
                                </div>

                                <div class="col-md-4 col-8">
                                    <h5 class="mb-1 fw-bold">@(item.Product?.Name ?? "Unknown Product")</h5>
                                    <p class="text-muted small mb-0">SKU: @(item.Product?.SKU ?? "—")</p>
                                    <p class="text-primary fw-bold mb-0">$@price.ToString("F2") / unit</p>
                                </div>

                                <div class="col-md-3 mt-3 mt-md-0">
                                    <form asp-action="Update" method="post" class="d-flex align-items-center gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1"
                                               class="form-control form-control-sm text-center shadow-none border-secondary-subtle" />
                                        <button class="btn btn-sm btn-outline-secondary" type="submit">Update</button>
                                    </form>
                                </div>

                                <div class="col-md-3 text-md-end mt-3 mt-md-0 d-flex flex-md-column justify-content-between align-items-center">
                                    <h5 class="fw-bold mb-0 mb-md-2">$@total.ToString("F2")</h5>
                                    <form asp-action="Remove" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button class="btn btn-link text-danger p-0 text-decoration-none small" type="submit">
                                            <i class="bi bi-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm sticky-top" style="top: 2rem;">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Order Summary</h4>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>$@grandTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="fw-bold">Total</h5>
                            <h5 class="fw-bold text-primary">$@grandTotal.ToString("F2")</h5>
                        </div>

                        <form asp-action="Checkout" method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-success btn-lg w-100 rounded-pill shadow-sm">
                                Place Order <i class="bi bi-arrow-right-short"></i>
                            </button>
                        </form>

                        <div class="mt-3 text-center">
                            <a asp-controller="Categories" asp-action="Index" class="text-muted small text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>