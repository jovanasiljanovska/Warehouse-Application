@model Warehouse.Domain.Domain.PurchaseOrder
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "Inventory Intake";
}

<div class="container py-4">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-dark text-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="h4 mb-1"><i class="bi bi-box-arrow-in-down me-2"></i>Inventory Intake</h2>
                    <p class="small mb-0 opacity-75">Processing PO #@Model.Id.ToString().Substring(0, 8)</p>
                </div>
                <span class="badge bg-warning text-dark">Status: @Model.Status</span>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-4">
                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Verification Required:</strong> Please inspect the physical shipment before confirming.
                    Once confirmed, these items will be added to your active inventory.
                </div>
            </div>

            <form asp-action="Receive" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <h5 class="fw-bold mb-3">Shipment Content</h5>
                <div class="table-responsive rounded-3 border mb-4">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Product Detail</th>
                                <th class="text-center">Expected Quantity</th>
                                <th class="text-end pe-4">Verification</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.PurchaseProductInOrders ?? new List<Warehouse.Domain.Domain.PurchaseProductInOrder>())
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@(line.OrderedProduct?.Name ?? "ID: " + line.ProductId)</div>
                                        <small class="text-muted">SKU: @(line.OrderedProduct?.SKU ?? "N/A")</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="fs-5 fw-bold text-primary">@line.Quantity</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="form-check d-inline-block">
                                            <input class="form-check-input" type="checkbox" required id="chk-@line.ProductId">
                                            <label class="form-check-label small text-muted" for="chk-@line.ProductId">Verified</label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row g-3 align-items-end">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Primary Storage Location</label>
                        <select name="targetLocation" class="form-select rounded-pill" required>
                            <option value="">-- Select Destination --</option>
                            <option value="Shelves">General Shelves</option>
                            <option value="Freezer">Cold Storage (Freezer)</option>
                            <option value="Receiving">Receiving Bay (Temporary)</option>
                        </select>
                        <div class="form-text">Choose where these items are being physically placed.</div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill px-4 me-2">Cancel</a>
                        <button type="submit" class="btn btn-primary rounded-pill px-5 shadow">
                            <i class="bi bi-check2-circle me-1"></i> Finalize Receipt
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</div>