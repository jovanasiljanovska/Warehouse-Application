@model Warehouse.Domain.Domain.PurchaseOrder
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "Purchase Order Details";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Procurement</a></li>
                <li class="breadcrumb-item active">PO #@Model.Id.ToString().Substring(0, 8)</li>
            </ol>
        </nav>

        <div>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            @if (Model.Status == OrderStatus.Shipped)
            {
                <a asp-action="Receive" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4 shadow-sm">
                    <i class="bi bi-box-arrow-in-down"></i> Process Receipt
                </a>
            }
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-primary text-white py-3 rounded-top-4">
                    <h5 class="mb-0 fw-bold">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block text-uppercase">Supplier</label>
                        <div class="d-flex align-items-center mt-1">
                            <div class="avatar-sm bg-light text-primary me-2">
                                <i class="bi bi-building"></i>
                            </div>
                            <span class="fw-semibold">@(Model.Supplier?.Email ?? Model.Supplier?.UserName ?? "External")</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block text-uppercase">Status</label>
                        @{
                            var badgeClass = Model.Status == OrderStatus.Received ? "bg-success" : "bg-warning text-dark";
                        }
                        <span class="badge @badgeClass rounded-pill mt-1 px-3">@Model.Status</span>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block text-uppercase">Created By</label>
                        <span class="text-dark">@(Model.Employee?.Email ?? "System")</span>
                    </div>

                    <div class="mb-0">
                        <label class="text-muted small fw-bold d-block text-uppercase">Timestamp</label>
                        <span class="text-dark">@Model.DateCreated.ToString("f")</span>
                    </div>
                </div>
            </div>

            @if (Model.Status == OrderStatus.Shipped)
            {
                <div class="alert alert-warning border-0 shadow-sm rounded-4">
                    <h6 class="fw-bold"><i class="bi bi-exclamination-triangle"></i> Pending Arrival</h6>
                    <p class="small mb-0">This shipment is currently in transit. Use the "Process Receipt" button once the truck arrives to update stock levels.</p>
                </div>
            }
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-card-checklist me-2 text-primary"></i>Shipping Manifest</h5>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Product Name</th>
                                <th>SKU / ID</th>
                                <th class="text-center">Expected Qty</th>
                                <th class="text-end pe-4">Stock Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.PurchaseProductInOrders ?? new List<Warehouse.Domain.Domain.PurchaseProductInOrder>())
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@(line.OrderedProduct?.Name ?? "Unknown Product")</div>
                                    </td>
                                    <td>
                                        <code class="text-muted small">@(line.OrderedProduct?.SKU ?? line.ProductId.ToString().Substring(0, 8))</code>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-dark rounded-pill fs-6 px-3">@line.Quantity</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        @if (Model.Status == OrderStatus.Received)
                                        {
                                            <span class="text-success small fw-bold"><i class="bi bi-check-circle-fill"></i> In Inventory</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small italic">Incoming</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>