@model IEnumerable<Warehouse.Domain.Domain.PurchaseOrder>
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "Incoming Purchase Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark">📦 Client Requests</h1>
            <p class="text-muted mb-0">Manage incoming purchase orders from warehouse procurement teams.</p>
        </div>
        <a asp-action="Finished" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-clock-history me-1"></i> Order History
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 py-3 text-muted fw-bold small">REQUEST DATE</th>
                            <th class="text-muted fw-bold small">STATUS</th>
                            <th class="text-muted fw-bold small">REQUESTED BY</th>
                            <th class="text-muted fw-bold small">ITEMS</th>
                            <th class="text-end pe-4">ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <div class="text-muted">
                                        <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                                        No active requests at this time.
                                    </div>
                                </td>
                            </tr>
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.DateCreated.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@item.DateCreated.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    @{
                                        var statusClass = item.Status == OrderStatus.Ordered ? "bg-info" : "bg-warning text-dark";
                                    }
                                    <span class="badge @statusClass rounded-pill px-3 shadow-none">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary bg-opacity-10 text-primary me-2 rounded-circle d-flex align-items-center justify-content-center" style="width:30px; height:30px;">
                                            <i class="bi bi-person-badge small"></i>
                                        </div>
                                        <span class="small">@(item.Employee?.Email ?? item.Employee?.UserName ?? "Staff")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border fw-normal">
                                        @(item.PurchaseProductInOrders?.Count ?? 0) Lines
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="SupplierDetails" asp-route-id="@item.Id"
                                       class="btn btn-dark btn-sm rounded-pill px-4 shadow-sm">
                                        Review <i class="bi bi-chevron-right ms-1"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>