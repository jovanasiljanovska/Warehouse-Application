@model IEnumerable<Warehouse.Domain.Domain.Product>

@{
    ViewData["Title"] = "Products Inventory";
    // Capture the search string from the URL to keep the input filled
    var searchTerm = Context.Request.Query["search"].ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary fw-bold">Warehouse Stock</h1>
        @if (User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        }
    </div>

    <div class="row mb-4">
        <div class="col-md-6 col-lg-4">
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <div class="input-group shadow-sm">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="text" name="search" value="@searchTerm"
                           class="form-control border-start-0"
                           placeholder="Search by name or SKU..." />
                    @if (!string.IsNullOrEmpty(searchTerm))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary border-start-0">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
                <button type="submit" class="btn btn-primary px-4">Search</button>
            </form>
        </div>
    </div>

    <hr class="mb-5" />

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-search text-muted display-1 opacity-25"></i>
            <h3 class="mt-3 text-muted">No products match your search.</h3>
            <a asp-action="Index" class="btn btn-link">Clear all filters</a>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 product-card shadow-sm border-0">
                    <div class="position-relative">
                        <img src="@item.ImageURL" class="card-img-top product-img" alt="@item.Name">
                        <span class="position-absolute top-0 end-0 m-2 badge bg-dark opacity-75">@item.SKU</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@item.Name</h5>

                        <div class="mb-2">
                            <span class="badge bg-info text-dark">@(item.Category?.Name ?? "General")</span>
                            <small class="text-muted d-block mt-1">
                                Supplied by: @(item.Supplier?.CompanyName ?? "Unknown")
                            </small>
                        </div>

                        <h4 class="text-primary fw-bold">$@item.UnitPrice</h4>

                        @{
                            var balances = item.StockBalances ?? new List<Warehouse.Domain.Domain.StockBalance>();
                            var total = balances.Sum(b => b.Quantity);
                        }

                        <div class="mt-auto bg-light p-2 rounded small border mb-3 text-center">
                            <span class="text-muted text-uppercase fw-bold">Total Stock</span> :
                            <span class="fw-bold @(total < 5 ? "text-danger" : "text-dark")">@total</span>
                        </div>

                        <div class="d-grid gap-2">
                            @if (User.IsInRole("Employee"))
                            {
                                <a asp-controller="PurchaseOrders" asp-action="Create" asp-route-productId="@item.Id" class="btn btn-primary rounded-pill">Restock more!</a>
                            }

                            @if (User.IsInRole("Customer"))
                            {
                                <form asp-controller="Carts" asp-action="Add" method="post" class="d-grid gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@item.Id" />

                                    <div class="input-group mb-2 shadow-sm rounded-pill overflow-hidden border">
                                        <button class="btn btn-light border-0 qty-btn" type="button"
                                                onclick="changeQty('@item.Id', -1)">
                                            <i class="bi bi-dash-lg"></i>
                                        </button>

                                        <input type="number"
                                               id="qty-@item.Id"
                                               name="quantity"
                                               class="form-control border-0 text-center fw-bold bg-white"
                                               value="1"
                                               min="1"
                                               readonly />

                                        <button class="btn btn-light border-0 qty-btn" type="button"
                                                onclick="changeQty('@item.Id', 1)">
                                            <i class="bi bi-plus-lg"></i>
                                        </button>
                                    </div>

                                    <button type="submit" class="btn btn-primary rounded-pill">
                                        <i class="bi bi-cart-plus"></i> Add to cart
                                    </button>
                                </form>
                            }
                        </div>
                    </div>

                    @if (User.IsInRole("Employee"))
                    {
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-2 pb-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm rounded-pill px-3">
                                <i class="bi bi-info-circle"></i> Details
                            </a>

                            <button type="button"
                                    class="btn btn-outline-danger btn-sm rounded-pill px-3"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-product-id="@item.Id"
                                    data-product-name="@item.Name">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@if (User.IsInRole("Employee"))
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0 pt-4 px-4">
                    <h5 class="modal-title fw-bold">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body px-4">
                    <p class="text-muted">Are you sure you want to proceed? This will permanently remove <span id="productNameSpan" class="fw-bold text-dark"></span>.</p>
                </div>
                <div class="modal-footer border-0 pb-4 px-4">
                    <div class="d-flex justify-content-end w-100 gap-2">
                        <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                        <form id="deleteForm" method="post" asp-action="Delete" class="m-0 p-0">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="productIdInput" value="" />
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Delete Product</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Modal Handling
        const deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const productId = button.getAttribute('data-product-id');
                const productName = button.getAttribute('data-product-name');

                deleteModal.querySelector('#productNameSpan').textContent = productName;
                deleteModal.querySelector('#productIdInput').value = productId;
            });
        }

        // Quantity Logic for Add to Cart
        function changeQty(id, delta) {
            const input = document.getElementById('qty-' + id);
            if(input) {
                let val = parseInt(input.value) + delta;
                input.value = (val < 1) ? 1 : val;
            }
        }
    </script>
}