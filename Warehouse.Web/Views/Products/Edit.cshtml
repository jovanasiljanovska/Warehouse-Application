@model Warehouse.Domain.Domain.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-2">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted">Inventory</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted">@Model.Name</a></li>
                    <li class="breadcrumb-item active fw-bold text-dark">Edit Details</li>
                </ol>
            </nav>
            <h2 class="fw-bold">Edit Product</h2>
            <p class="text-muted">Update the specifications or pricing for this warehouse item.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3 small"></div>

                        <div class="row g-4">
                            <div class="col-12">
                                <h6 class="text-uppercase text-primary fw-bold small mb-3">General Information</h6>
                                <hr class="mt-0 mb-4 opacity-10">
                            </div>

                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-semibold small"></label>
                                <input asp-for="Name" class="form-control rounded-pill px-3" placeholder="e.g. Industrial Drill" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="SKU" class="form-label fw-semibold small"></label>
                                <input asp-for="SKU" class="form-control rounded-pill px-3" placeholder="WH-001" />
                                <span asp-validation-for="SKU" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label fw-semibold small">Category</label>
                                <select asp-for="CategoryId" class="form-select rounded-pill px-3" asp-items="ViewBag.CategoryId">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SupplierId" class="form-label fw-semibold small">Primary Supplier</label>
                                <select asp-for="SupplierId" class="form-select rounded-pill px-3" asp-items="ViewBag.SupplierId">
                                    <option value="">-- Select Supplier --</option>
                                </select>
                                <span asp-validation-for="SupplierId" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-5">
                                <h6 class="text-uppercase text-primary fw-bold small mb-3">Logistics & Pricing</h6>
                                <hr class="mt-0 mb-4 opacity-10">
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UnitPrice" class="form-label fw-semibold small">Unit Price ($)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3">$</span>
                                    <input asp-for="UnitPrice" class="form-control border-start-0 rounded-end-pill pe-3" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="UnitPrice" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ImageURL" class="form-label fw-semibold small">Product Image URL</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3"><i class="bi bi-link-45deg"></i></span>
                                    <input asp-for="ImageURL" class="form-control border-start-0 rounded-end-pill pe-3" placeholder="https://..." />
                                </div>
                                <span asp-validation-for="ImageURL" class="text-danger small"></span>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageURL))
                            {
                                <div class="col-12 text-center mt-3">
                                    <p class="small text-muted mb-2">Current Image Preview</p>
                                    <img src="@Model.ImageURL" class="rounded shadow-sm border" style="max-height: 120px;" />
                                </div>
                            }

                            <div class="col-12 mt-5 d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-link text-decoration-none text-muted p-0">
                                    <i class="bi bi-arrow-left me-1"></i> Cancel & Return
                                </a>
                                <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm transition-hover">
                                    <i class="bi bi-check2-circle me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}