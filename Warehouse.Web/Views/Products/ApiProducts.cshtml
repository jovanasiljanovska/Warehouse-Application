@model List<Warehouse.Domain.External.ExternalCatalogItem>
@{
    ViewData["Title"] = "API Products";
    var apiCategory = (ViewData["ApiCategory"] as string) ?? "Selected Category";
}

<div class="container py-5">
    @* --- HEADER --- *@
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-2">
                    <li class="breadcrumb-item"><a asp-action="ApiCategories" class="text-decoration-none text-muted">API Categories</a></li>
                    <li class="breadcrumb-item active fw-bold text-dark">@apiCategory</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-dark mb-1">External Catalog</h1>
            <p class="text-muted mb-0">Select items from the external API to import into your local warehouse.</p>
        </div>

        <a asp-action="ApiCategories" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i>Change Category
        </a>
    </div>

    @if (Model.Any())
    {
        @* --- FIXED BULK ACTION CARD --- *@
        <div class="card border-0 shadow-lg rounded-4 mb-5 overflow-hidden">
            <div class="card-body p-0">
                <div class="d-flex align-items-stretch">
                    <div class="bg-primary p-4 d-flex align-items-center" style="min-width: 100px;">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 mx-auto">
                            <i class="bi bi-cloud-download-fill fs-3 text-white"></i>
                        </div>
                    </div>

                    <div class="flex-grow-1 p-4 bg-light d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                        <div>
                            <h5 class="mb-1 fw-bold text-dark">Bulk Import Services</h5>
                            <p class="mb-0 text-muted">Ready to sync <span class="badge bg-primary">@Model.Count items</span> from the <strong>@apiCategory</strong> catalog.</p>
                        </div>

                        <form asp-action="ImportAll" method="post" id="importAllForm" class="d-flex align-items-center gap-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="apiCategory" value="@apiCategory" />

                            <div class="form-check form-switch custom-switch p-0 m-0 d-flex align-items-center gap-2">
                                <label class="form-check-label small fw-bold text-secondary" for="confirmImportAll" style="cursor: pointer;">Unlock</label>
                                <input class="form-check-input ms-0" type="checkbox" id="confirmImportAll" style="width: 2.5em; height: 1.25em; cursor: pointer;">
                            </div>

                            <button type="submit" id="importAllBtn" class="btn btn-outline-primary rounded-pill px-4 fw-bold transition-all" disabled>
                                Import All
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        @* --- TABLE --- *@
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 border-0 text-uppercase small fw-bold text-muted">Preview</th>
                            <th class="py-3 border-0 text-uppercase small fw-bold text-muted">Product Info</th>
                            <th class="py-3 border-0 text-uppercase small fw-bold text-muted">Price</th>
                            <th class="py-3 border-0 text-uppercase small fw-bold text-muted pe-4 text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4" style="width: 120px;">
                                    <div class="bg-white rounded-3 border p-1 d-flex align-items-center justify-content-center shadow-sm" style="width: 80px; height: 80px;">
                                        @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid" style="max-height: 70px; object-fit: contain;" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-image text-muted fs-4"></i>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark mb-0">@item.Name</div>
                                    <span class="badge bg-light text-muted border fw-normal">ID: @item.ExternalId</span>
                                </td>
                                <td><span class="fw-bold text-primary">$@item.UnitPrice</span></td>
                                <td class="pe-4 text-end">
                                    <form asp-action="Import" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="externalId" value="@item.ExternalId" />
                                        <button class="btn btn-success rounded-pill px-4 shadow-sm fw-bold">
                                            <i class="bi bi-download me-2"></i>Import
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-search display-1 text-muted opacity-25"></i>
            <p class="mt-3 text-muted">No products found in this category.</p>
        </div>
    }
</div>

<style>
    /* Fixed the @@ symbol for CSS keyframes in Razor */
    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .custom-switch .form-check-input:checked {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .transition-all {
        transition: all 0.2s ease-in-out;
    }

    #importAllBtn:not(:disabled) {
        background-color: #0d6efd;
        color: white;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
    }

    .btn-loading {
        position: relative;
        color: transparent !important;
        pointer-events: none;
    }

        .btn-loading::after {
            content: "";
            position: absolute;
            width: 1rem;
            height: 1rem;
            top: 50%;
            left: 50%;
            margin-top: -0.5rem;
            margin-left: -0.5rem;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 0.6s linear infinite;
        }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkbox = document.getElementById('confirmImportAll');
            const bulkBtn = document.getElementById('importAllBtn');

            // Handle Toggle
            if(checkbox && bulkBtn) {
                checkbox.addEventListener('change', function() {
                    bulkBtn.disabled = !this.checked;
                });
            }

            // Handle Loading State on all forms
            document.querySelectorAll('form').forEach(form => {
                form.addEventListener('submit', function () {
                    const btn = this.querySelector('button[type="submit"]');
                    if (btn) {
                        btn.classList.add('btn-loading');
                    }
                });
            });
        });
    </script>
}