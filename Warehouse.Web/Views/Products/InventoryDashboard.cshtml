@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Inventory Management</h1>
        <p class="text-muted">Select a category to manage stock levels or organize your product catalog.</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card border-0 shadow-sm h-100 rounded-4 transition-hover">
                <div class="card-body p-5 text-center">
                    <div class="mb-4 d-inline-block p-4 rounded-circle bg-primary bg-opacity-10">
                        <i class="bi bi-boxes fs-1 text-primary"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Master Products</h3>
                    <p class="text-muted mb-4">View individual items, update stock counts, and edit pricing or SKU details.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">
                        Manage Products
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-lg-4">
            <div class="card border-0 shadow-sm h-100 rounded-4 transition-hover">
                <div class="card-body p-5 text-center">
                    <div class="mb-4 d-inline-block p-4 rounded-circle bg-success bg-opacity-10">
                        <i class="bi bi-tags fs-1 text-success"></i>
                    </div>
                    <h3 class="fw-bold mb-3">Categories</h3>
                    <p class="text-muted mb-4">Organize your warehouse by creating, editing, or deleting product departments.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success w-100 rounded-pill py-2 fw-bold text-white">
                        Manage Categories
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-link text-decoration-none text-muted">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>