@model List<string>
@{
    ViewData["Title"] = "External API Categories";
}

<div class="container py-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <div class="d-flex align-items-center gap-2 mb-1">
                <h1 class="display-5 fw-bold text-dark mb-0">API Import</h1>
                <span class="badge rounded-pill bg-success-subtle text-success border border-success-subtle px-3">Live Connection</span>
            </div>
            <p class="text-muted mb-0">Browse categories from the <span class="fw-bold text-primary">Fake Store API</span> to sync with your local inventory.</p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-2"></i>Local Categories
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-3 fs-4"></i>
            <div>@TempData["Success"]</div>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info border-0 shadow-sm rounded-4 d-flex align-items-center mb-4" role="alert">
            <i class="bi bi-info-circle-fill me-3 fs-4"></i>
            <div>@TempData["Info"]</div>
        </div>
    }

    <div class="row g-4">
        @foreach (var c in Model)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm rounded-4 transition-hover">
                    <div class="card-body p-4 text-center">
                        <div class="bg-primary-subtle text-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            @if (c.Contains("electronics", StringComparison.OrdinalIgnoreCase))
                            {
                                <i class="bi bi-cpu fs-3"></i>
                            }
                            else if (c.Contains("jewelery", StringComparison.OrdinalIgnoreCase))
                            {

                                <i class="bi bi-gem fs-3"></i>
                            }
                            else if (c.Contains("men", StringComparison.OrdinalIgnoreCase))
                            {

                                <i class="bi bi-gender-male fs-3"></i>
                            }
                            else if (c.Contains("women", StringComparison.OrdinalIgnoreCase))
                            {

                                <i class="bi bi-gender-female fs-3"></i>
                            }
                            else
                            {

                                <i class="bi bi-box fs-3"></i>
                            }
                        </div>

                        <h5 class="fw-bold text-capitalize text-dark mb-3">@c</h5>

                        <div class="d-grid">
                            <a asp-action="ApiProducts" asp-route-category="@c"
                               class="btn btn-primary rounded-pill py-2 shadow-sm fw-medium">
                                <i class="bi bi-eye me-2"></i>View Products
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .transition-hover {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .transition-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .bg-primary-subtle {
        background-color: #e7f1ff;
    }

    .bg-success-subtle {
        background-color: #d1e7dd;
    }
</style>