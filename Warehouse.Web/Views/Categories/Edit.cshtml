@model Warehouse.Domain.Domain.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-2">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted">Categories</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted">@Model.Name</a></li>
                    <li class="breadcrumb-item active fw-bold text-dark" aria-current="page">Edit Category</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-dark">Edit Category</h2>
            <p class="text-muted">Modify the details for the <span class="text-primary fw-bold">@Model.Name</span> segment.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3 small"></div>

                        <div class="row g-4">
                            <div class="col-12">
                                <h6 class="text-uppercase text-primary fw-bold small mb-3">Identity & Branding</h6>
                                <hr class="mt-0 mb-4 opacity-10">
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label fw-semibold small">Category Name</label>
                                <input asp-for="Name" class="form-control rounded-pill px-3" placeholder="e.g., Electronics..." />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label fw-semibold small">Description</label>
                                <textarea asp-for="Description" class="form-control rounded-4 px-3 py-2" rows="4" placeholder="Describe this category..."> </textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-4">
                                <h6 class="text-uppercase text-primary fw-bold small mb-3">Visuals</h6>
                                <hr class="mt-0 mb-4 opacity-10">
                            </div>

                            <div class="col-md-9">
                                <label asp-for="ImageURL" class="form-label fw-semibold small">Category Cover Image URL</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0 rounded-start-pill ps-3">
                                        <i class="bi bi-link-45deg"></i>
                                    </span>
                                    <input asp-for="ImageURL" id="imageUrlInput" class="form-control border-start-0 rounded-end-pill pe-3" placeholder="https://..." />
                                </div>
                                <span asp-validation-for="ImageURL" class="text-danger small"></span>
                            </div>

                            <div class="col-md-3 d-flex align-items-end justify-content-center">
                                <div class="category-preview border rounded-3 bg-light d-flex align-items-center justify-content-center overflow-hidden shadow-sm" style="width: 80px; height: 80px;">
                                    @if (!string.IsNullOrEmpty(Model.ImageURL))
                                    {
                                        <img src="@Model.ImageURL" class="img-fluid" id="categoryPreviewImg" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-image text-muted fs-3" id="previewPlaceholder"></i>
                                    }
                                </div>
                            </div>

                            <div class="col-12 mt-5 d-flex justify-content-between align-items-center">
                                <a asp-action="Index" class="btn btn-link text-decoration-none text-muted p-0">
                                    <i class="bi bi-arrow-left me-1"></i> Cancel & Return
                                </a>
                                <button type="submit" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm transition-hover">
                                    <i class="bi bi-check-circle me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}