@model IEnumerable<Warehouse.Domain.Domain.Category>

@{
    ViewData["Title"] = "Warehouse Categories";
}

<div class="container py-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <h1 class="display-5 fw-bold text-dark mb-1">Inventory Categories</h1>
            <p class="text-muted mb-0">Browse and manage your warehouse product segments.</p>
        </div>

        @if (User.IsInRole("Employee"))
        {
            <a asp-action="Create" class="btn btn-success px-4 py-2 shadow-sm rounded-pill transition-all">
                <i class="bi bi-plus-circle me-2"></i>New Category
            </a>

            
                
            

        }
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 warehouse-card border-0 shadow-sm overflow-hidden">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start mb-3">
                            <div class="category-img-wrapper shadow-sm border me-3">
                                @if (!string.IsNullOrEmpty(item.ImageURL))
                                {
                                    <img src="@item.ImageURL" alt="@item.Name" />
                                }
                                else
                                {
                                    <div class="category-placeholder bg-light text-primary">
                                        <i class="bi bi-box-seam fs-4"></i>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="card-title fw-bold text-dark mb-1">@item.Name</h5>
                                <span class="badge bg-light text-muted border fw-normal">ID: @item.Id.ToString().Substring(0, 5)</span>
                            </div>
                        </div>
                        <p class="card-text text-muted small line-clamp">
                            @item.Description
                        </p>
                    </div>

                    <div class="card-footer bg-light border-0 p-3 mt-auto">
                        @if (User.IsInRole("Employee"))
                        {
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3">Details</a>

                                <button type="button"
                                        class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteCategoryModal"
                                        data-category-id="@item.Id"
                                        data-category-name="@item.Name">
                                    Delete
                                </button>
                            </div>
                        }

                        @if (User.IsInRole("Customer"))
                        {
                            <div class="d-grid">
                                <a class="btn btn-primary rounded-pill shadow-sm py-2"
                                   asp-controller="Products"
                                   asp-action="Index"
                                   asp-route-categoryId="@item.Id">
                                    <i class="bi bi-search me-2"></i>Explore Products
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@if (User.IsInRole("Employee"))
{
    <div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0 pt-4 px-4">
                    <h5 class="modal-title fw-bold">Delete Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-4">
                    <p class="text-muted">
                        Are you sure you want to proceed? This will permanently remove the
                        <span id="categoryNameSpan" class="fw-bold text-dark"></span> segment.
                    </p>
                </div>
                <div class="modal-footer border-0 pb-4 px-4">
                    <div class="d-flex justify-content-end w-100 gap-2">
                        <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                        <form id="deleteCategoryForm" method="post" asp-action="Delete" class="m-0 p-0">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" id="categoryIdInput" value="" />
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Delete Category</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // The script only initializes if the modal exists in the DOM
        const deleteModal = document.getElementById('deleteCategoryModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                const catId = button.getAttribute('data-category-id');
                const catName = button.getAttribute('data-category-name');

                deleteModal.querySelector('#categoryNameSpan').textContent = catName;
                deleteModal.querySelector('#categoryIdInput').value = catId;
            });
        }
    </script>
}