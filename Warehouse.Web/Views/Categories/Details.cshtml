@model Warehouse.Domain.Domain.Category

@{
    ViewData["Title"] = Model.Name + " Details";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <a asp-action="Index" class="btn btn-link text-decoration-none p-0 text-muted">
            <i class="bi bi-arrow-left me-1"></i> Back to Categories
        </a>
    </nav>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center border-end p-4">
                @if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <img src="@Model.ImageURL" alt="@Model.Name" class="img-fluid rounded-3 shadow-sm" style="max-height: 300px; object-fit: cover;">
                }
                else
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-collection display-1 opacity-25"></i>
                        <p class="mt-2 small">No Category Image</p>
                    </div>
                }
            </div>

            <div class="col-md-8">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h6 class="text-primary text-uppercase fw-bold small mb-1">Inventory Segment</h6>
                            <h1 class="fw-bold text-dark mb-0">@Model.Name</h1>
                        </div>
                        <span class="badge bg-light text-muted border px-3 py-2 rounded-pill">
                            ID: @Model.Id.ToString().Substring(0, 8)
                        </span>
                    </div>

                    <hr class="my-4 opacity-10">

                    <div class="mb-4">
                        <label class="text-muted small fw-bold text-uppercase d-block mb-2">Description</label>
                        <p class="lead text-secondary" style="font-size: 1.1rem; line-height: 1.6;">
                            @(string.IsNullOrEmpty(Model.Description) ? "No description provided for this category." : Model.Description)
                        </p>
                    </div>

                    <div class="mt-5 d-flex gap-2">
                        @if (User.IsInRole("Employee"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4">
                                <i class="bi bi-pencil-square me-2"></i>Edit Category
                            </a>

                            <button type="button"
                                    class="btn btn-outline-danger rounded-pill px-4"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteCategoryModal">
                                <i class="bi bi-trash me-2"></i>Delete
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Employee"))
{
    <div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow rounded-4">
                <div class="modal-header border-0 pt-4 px-4">
                    <h5 class="modal-title fw-bold">Delete Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body px-4">
                    <p class="text-muted">Are you sure you want to remove <strong>@Model.Name</strong>? This will affect all associated product listings.</p>
                </div>
                <div class="modal-footer border-0 pb-4 px-4">
                    <div class="d-flex justify-content-end w-100 gap-2">
                        <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                        <form asp-action="DeleteConfirmed" method="post" class="m-0">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Delete Permanently</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}