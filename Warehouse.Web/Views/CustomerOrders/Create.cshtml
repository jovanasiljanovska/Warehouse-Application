@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="productId" value="@ViewData["ProductId"]" />

    <div class="form-group">
        <label>Product</label>
        <input class="form-control" value="@ViewData["ProductName"]" readonly />
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input class="form-control" type="number" name="quantity" min="1" value="1" />
    </div>

    <button type="submit" class="btn btn-primary">Order</button>
    <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to Products</a>
</form>

<div asp-validation-summary="All" class="text-danger"></div>
