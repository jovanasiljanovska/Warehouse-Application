@model Warehouse.Domain.Domain.CustomerOrder

@{
    ViewData["Title"] = "Cancel Order";
}

<h1>Cancel Order</h1>

<p>Are you sure you want to cancel this order?</p>

<dl class="row">
    <dt class="col-sm-2">Order Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.DateCreated</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<h4>Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.ProductInOrders ?? new List<Warehouse.Domain.Domain.ProductInOrder>())
        {
            <tr>
                <td>@(line.OrderedProduct?.Name ?? line.ProductId.ToString())</td>
                <td>@line.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Cancel" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Yes, cancel</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">No, go back</a>
</form>

<div asp-validation-summary="All" class="text-danger"></div>
