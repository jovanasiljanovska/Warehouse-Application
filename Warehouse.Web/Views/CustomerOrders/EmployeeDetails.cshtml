@model Warehouse.Domain.Domain.CustomerOrder
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "Process Order";
    var grandTotal = Model.ProductInOrders?.Sum(x => (x.OrderedProduct?.UnitPrice ?? 0) * x.Quantity) ?? 0;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-action="EmployeeIndex">Order Queue</a></li>
                <li class="breadcrumb-item active">Process #@Model.Id.ToString().Substring(0, 8)</li>
            </ol>
        </nav>
        <span class="badge @(Model.Status == OrderStatus.Ordered ? "bg-warning text-dark" : "bg-info") px-3 py-2 rounded-pill">
            Status: @Model.Status
        </span>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white fw-bold">
                    Order Information
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted small d-block">CUSTOMER</label>
                        <span class="fw-bold">@(Model.Customer?.Email ?? Model.Customer?.UserName ?? "Guest")</span>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block">ORDER DATE</label>
                        <span>@Model.DateCreated.ToString("f")</span>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block">TOTAL VALUE</label>
                        <span class="text-success h5 fw-bold">$@grandTotal.ToString("F2")</span>
                    </div>
                    <hr />
                    <div class="mb-0">
                        <label class="text-muted small d-block">ORDER REFERENCE</label>
                        <code class="small">@Model.Id</code>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    @if (Model.Status == OrderStatus.Ordered)
                    {
                        <p class="small text-muted mb-3">Ensure all items below are picked and packed before shipping.</p>
                        <form asp-action="Ship" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill shadow-sm">
                                <i class="bi bi-box-seam me-2"></i>Mark as Shipped
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-light border mb-0">
                            <i class="bi bi-info-circle me-2"></i> Finalized as <strong>@Model.Status</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-list-check me-2"></i>Picking List</h5>
                </div>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Product Detail</th>
                                <th>SKU</th>
                                <th class="text-center">Qty</th>
                                <th class="text-end pe-4">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.ProductInOrders ?? new List<Warehouse.Domain.Domain.ProductInOrder>())
                            {
                                var unit = line.OrderedProduct?.UnitPrice ?? 0;
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold">@(line.OrderedProduct?.Name ?? "Product ID: " + line.ProductId)</div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@line.OrderedProduct?.SKU</span></td>
                                    <td class="text-center">
                                        <span class="fs-5 fw-bold text-primary">× @line.Quantity</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        $@((unit * line.Quantity).ToString("F2"))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>