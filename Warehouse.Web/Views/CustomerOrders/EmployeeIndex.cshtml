@model IEnumerable<Warehouse.Domain.Domain.CustomerOrder>
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "Incoming Orders";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-dark">📦 Customer Order Queue</h1>
            <p class="text-muted">Manage and process active orders from the warehouse floor.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Finished" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-check-all"></i> Archive / Finished
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3">Order Date</th>
                            <th>Created by (customer username)</th>
                            <th class="text-center">Complexity</th>
                            <th>Current Status</th>
                            <th class="text-end pe-4">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    No active orders in the queue.
                                </td>
                            </tr>
                        }
                        @foreach (var o in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-semibold">@o.DateCreated.ToString("dd/MM HH:mm")</span>
                                    <small class="text-muted d-block">@o.DateCreated.ToShortDateString()</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary-soft text-primary me-2">
                                            @((o.Customer?.Email?.Substring(0, 1) ?? "U").ToUpper())
                                        </div>
                                        <span>@(o.Customer?.Email ?? o.Customer?.UserName ?? "Guest User")</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge rounded-pill bg-secondary bg-opacity-10 text-secondary border">
                                        @(o.ProductInOrders?.Count ?? 0) SKUs
                                    </span>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = o.Status switch
                                        {
                                            OrderStatus.Ordered => "bg-warning text-dark",
                                            OrderStatus.Approved => "bg-primary text-white",
                                            OrderStatus.Shipped => "bg-info text-white",
                                            _ => "bg-light text-muted"
                                        };
                                    }
                                    <span class="badge @badgeClass shadow-none">
                                        <i class="bi bi-dot"></i> @o.Status
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="EmployeeDetails" asp-route-id="@o.Id"
                                       class="btn btn-dark btn-sm rounded-pill px-4 shadow-sm">
                                        Process <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>