@model IEnumerable<Warehouse.Domain.Domain.CustomerOrder>
@using Warehouse.Domain.Domain.Enums

@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5 text-primary fw-bold">My Order History</h1>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-primary rounded-pill">
            <i class="bi bi-cart-plus"></i> New Order
        </a>
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5">
                <div class="display-1 text-muted">📦</div>
                <p class="fs-4 text-muted">You haven't placed any orders yet.</p>
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow-sm border-0 order-card">
                        <div class="card-body d-flex flex-wrap align-items-center justify-content-between">

                            <div class="me-4 mb-2">
                                <span class="text-muted small d-block">ORDER DATE</span>
                                <span class="fw-bold">@order.DateCreated.ToString("MMM dd, yyyy")</span>
                            </div>

                            <div class="me-4 mb-2">
                                <span class="text-muted small d-block">ITEMS</span>
                                <span class="badge bg-secondary rounded-pill">@(order.ProductInOrders?.Count ?? 0) Products</span>
                            </div>

                            <div class="me-4 mb-2">
                                <span class="text-muted small d-block">STATUS</span>
                                @{
                                    var statusClass = order.Status switch
                                    {
                                        OrderStatus.Ordered => "bg-primary",
                                        OrderStatus.Approved => "bg-warning text-dark",
                                        OrderStatus.Shipped => "bg-info",
                                        OrderStatus.Received => "bg-success",
                                        OrderStatus.Cancelled => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@order.Status</span>
                            </div>

                            <div class="d-flex gap-2 ms-auto">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-light border rounded-pill px-4">
                                    View Details
                                </a>

                                @if (order.Status == OrderStatus.Ordered)
                                {
                                    <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger rounded-pill px-4"
                                                onclick="return confirm('Are you sure you want to cancel this order?');">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>